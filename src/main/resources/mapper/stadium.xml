<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.red.domain.stadium.StadiumDAO">
	
	<select id="findAll" resultType="com.cos.finaltest.model.Stadium">
		SELECT id, stadiumName, openDate 
		FROM stadium
	</select>

	<select id="findByIdAndName" resultType="com.cos.finaltest.model.Stadium">
		SELECT id, stadiumName, openDate 
		FROM stadium
		WHERE id = #{id} AND name = #{stadiumName}
	</select>

	<delete id="deleteById">
		DELETE FROM stadium
		WHERE id = #{id}
	</delete>

	<update id="update">
		UPDATE stadium SET name = #{stadiumName}
		WHERE id = #{id} 
	</update>
	
	<insert id="insert">
		INSERT INTO stadium(stadiumName,openDate)
		VALUES(#{stadiumName},now())
	</insert>

</mapper>