<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.red.domain.team.TeamDao">
	
	<insert id="insert">
		INSERT INTO team(stadiumId,teamName,createDate)
		VALUES(#{stadiumId}, #{teamName}, #{createDate},
		now())
	</insert>

	<select id="findById" resultType="site.metacoding.red.domain.team.TeamDao">
		SELECT * FROM team WHERE id = #{id}
	</select>

</mapper>